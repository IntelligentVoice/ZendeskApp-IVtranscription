{
  "triggers": {
    "iv_trigger": {
      "title": "Transcribe recordings and redact PCI data",
      "actions": [
        {
          "field": "notification_target",
          "value": [
            "iv_http_target",
            "{\"ticketid\": \"{{ticket.id}}\", \"ticket.link\": \"{{ticket.link}}\", \"ticket.url\": \"{{ticket.url}}\"}"
          ]
        }
      ],
      "conditions": {
        "any": [
          {
            "field": "comment_includes_word",
            "operator": "is",
            "value": "Outbound call to"
          },
          {
            "field": "comment_includes_word",
            "operator": "is",
            "value": "Inbound call from"
          }
        ]
      }
    }
  },
  "targets": {
    "iv_http_target": {
      "type": "http_target",
      "title": "Intelligent Voice PCI data redaction",
      "active": true,
      "target_url": "https://redact2.intelligentvoice.com/redact",
      "method": "post",
      "content_type": "application/json"
    }
  }
}
